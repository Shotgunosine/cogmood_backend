Bootstrap: docker
From: python:3.12
Stage: spython-base

%files
requirements.txt .
. .
%post
# EXPOSE 5000
mkdir -p /cogmood_backend
cd /cogmood_backend
pip install -r requirements.txt &&\
playwright install && \
playwright install-deps
%runscript
cd /cogmood_backend
exec /bin/bash flask run --host 0.0.0.0 "$@"
%startscript
cd /cogmood_backend
exec /bin/bash flask run --host 0.0.0.0 "$@"
